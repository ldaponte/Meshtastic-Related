{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Docker: Run interactive container",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--env-file",
                "./Container/app.env",
                "--rm", // Remove container when done
                "-it", // Interactive mode
                "meshtasticrelated:v11", // Docker image to use (replace with your image)
            ],
            "problemMatcher": []
        },
        {
            "label": "Build Docker Image (AMD64)",
            "type": "docker-build",
            "platform": "linux/amd64",
            "dockerBuild": {
                "context": ".",
                "dockerfile": "./Dockerfile",
                "tag": "meshtasticrelated_amd64:v12"
            }
        },
        {
            "label": "Build Docker Image",
            "type": "docker-build",
            "dockerBuild": {
                "context": ".",
                "dockerfile": "./Dockerfile",
                "tag": "meshtasticrelated:v12"
            }
        },
        {
            "label": "Run My Container",
            "type": "docker-run",
            "dockerRun": {
                "image": "meshtasticrelated:v12",
                "args": ["--rm","-it","--env-file app.env"], // Optional: Login shell
                "options": ["--rm","-it"] // Interactive TTY
            }
        },
        {
            "label": "Run Larry Docker Container",
            "type": "shell",
            "command": "docker",
            "args": [
                "run",
                "--env-file",
                "app.env",
                "-it",                       // Interactive mode
                "--name", "meshtasticrelated-v12",   // Set container name
                "--rm"
                "meshtasticrelated:v12"                  // Docker image to run
            ],
            "problemMatcher": []
        }
    ]
}